<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head.ejs') %> 
</head>
<body>
    <%- include('partials/navibar.ejs') %>
    <h1><%= title %> </h1>

    <form action="/edit/<%= user._id %> " method="post">
        <div>
            <label for="name">Name</label>
            <input type="text" name="name" placeholder="Your name here" value="<%= user.name %>">
        </div>
        <div>
            <label for="age">Age</label>
            <input type="number" name="age" placeholder="Your age here" value="<%= user.age %>">
        </div>
        <div>
            <label for="email">E-mail</label>
            <input type="email" name="email" placeholder="Your email here" value="<%= user.email %>">
        </div>
        <button type="submit">Save</button>
    </form>

    <% if(typeof message !== 'undefined'){%>
        <p> <%= message %> </p>
    <%} %> 


    
    <%- include('partials/foot.ejs') %>
</body>
</html>